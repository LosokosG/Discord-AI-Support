# Application Configuration
APP_PORT=3000
PORT=3000
NODE_OPTIONS=--experimental-vm-modules --no-warnings

# Supabase Configuration (teraz łączymy się z instancją Supabase CLI)
# Domyślnie Supabase CLI uruchamia API (Kong) na porcie 54321 na hoście.
# Z kontenera Docker na Docker Desktop (Windows/Mac) użyj host.docker.internal
PUBLIC_SUPABASE_URL=http://host.docker.internal:54321

# Klucze API uzyskasz z komendy `npx supabase status` po uruchomieniu projektu Supabase
PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_from_cli
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_from_cli

# OpenRouter API
OPENROUTER_API_KEY=your_openrouter_api_key

# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=your_discord_redirect_uri

# Poniższe zmienne nie są już potrzebne w tym pliku, 
# ponieważ Supabase jest zarządzane przez CLI:
# POSTGRES_PASSWORD=your_strong_postgres_password
# SITE_URL=http://localhost:3000
# URI_ALLOW_LIST=http://localhost:3000,http://127.0.0.1:3000
# JWT_SECRET=your_jwt_secret_at_least_32_characters_long
# GOTRUE_DISABLE_SIGNUP=false
# KONG_PORT=8000
# KONG_ADMIN_PORT=8001
# POSTGRES_PORT=54322 